@page
@model ProyectoRH2025.Pages.RecuperarPasswordModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Recuperar contraseña</title>
    <style>
        body {
            font-family: Arial;
            background-color: #f5f5f5;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .box {
            background: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 0 15px rgba(0,0,0,0.2);
            width: 350px;
        }

        label {
            font-weight: bold;
        }

        input[type="text"] {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            margin-bottom: 15px;
            border-radius: 6px;
            border: 1px solid #ccc;
        }

        button {
            width: 100%;
            padding: 10px;
            background-color: #003366;
            color: white;
            border: none;
            border-radius: 6px;
            font-weight: bold;
        }

        .error {
            color: red;
        }

        .success {
            color: green;
        }

        .token-link {
            word-break: break-all;
            margin-top: 15px;
            font-size: 0.9em;
        }
    </style>
</head>
<body>
    <div class="box">
        <h2>Recuperar contraseña</h2>
        <form method="post">
            <label>Usuario:</label>
            <input asp-for="NombreUsuario" type="text" />

            <button type="submit">Generar enlace</button>

            @if (!string.IsNullOrEmpty(Model.MensajeError))
            {
                <div class="error">@Model.MensajeError</div>
            }

            @if (!string.IsNullOrEmpty(Model.TokenGenerado))
            {
                <div class="success">Copia este enlace temporal:</div>
                <div class="token-link">
                    <a href="/EstablecerPassword?token=@Model.TokenGenerado">/EstablecerPassword?token=@Model.TokenGenerado</a>
                </div>
            }
        </form>
    </div>
</body>
</html>

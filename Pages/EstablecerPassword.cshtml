@page
@model ProyectoRH2025.Pages.EstablecerPasswordModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Establecer nueva contraseña</title>
    <style>
        body {
            font-family: Arial;
            background-color: #f5f5f5;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .box {
            background: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 0 15px rgba(0,0,0,0.2);
            width: 350px;
        }

        label {
            font-weight: bold;
        }

        input[type="password"] {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            margin-bottom: 15px;
            border-radius: 6px;
            border: 1px solid #ccc;
        }

        button {
            width: 100%;
            padding: 10px;
            background-color: #003366;
            color: white;
            border: none;
            border-radius: 6px;
            font-weight: bold;
        }

        .error {
            color: red;
        }

        .success {
            color: green;
        }
    </style>
</head>
<body>
    <div class="box">
        <h2>Nueva contraseña</h2>

        @if (!string.IsNullOrEmpty(Model.MensajeError))
        {
            <div class="error">@Model.MensajeError</div>
        }

        @if (!string.IsNullOrEmpty(Model.MensajeExito))
        {
            <div class="success">@Model.MensajeExito</div>

            <script>
                setTimeout(function () {
                    window.location.href = '/Login';
                }, 5000); // 5000 milisegundos = 5 segundos
            </script>
        }
        else
        {
            <form method="post">
                <input type="hidden" asp-for="Token" />

                <label>Nueva contraseña:</label>
                <input asp-for="NuevaPassword" type="password" />

                <label>Confirmar contraseña:</label>
                <input asp-for="ConfirmarPassword" type="password" />

                <button type="submit">Guardar</button>
            </form>
        }
    </div>
</body>
</html>

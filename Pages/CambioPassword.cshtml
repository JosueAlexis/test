@page
@model ProyectoRH2025.Pages.CambioPasswordModel
@{
    ViewData["Title"] = "Cambiar Contraseña";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Cambiar contraseña</h4>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label asp-for="PasswordActual" class="form-label">Contraseña actual</label>
                    <input asp-for="PasswordActual" type="password" class="form-control" />
                    <span asp-validation-for="PasswordActual" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PasswordNueva" class="form-label">Nueva contraseña</label>
                    <input asp-for="PasswordNueva" type="password" class="form-control" />
                    <span asp-validation-for="PasswordNueva" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmarPassword" class="form-label">Confirmar nueva contraseña</label>
                    <input asp-for="ConfirmarPassword" type="password" class="form-control" />
                    <span asp-validation-for="ConfirmarPassword" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Cambiar contraseña
                    </button>
                </div>
            </form>

            @if (!string.IsNullOrEmpty(Model.MensajeError))
            {
                <div class="alert alert-danger mt-3">
                    @Model.MensajeError
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.MensajeExito))
            {
                <div class="alert alert-success mt-3">
                    @Model.MensajeExito
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

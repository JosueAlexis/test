    }

    50% {
        transform: scale(1.05);
    }

    100% {
        transform: scale(1);
    }

    }

    .personal-card.status-changed {
        animation: statusChange 0.5s ease;
    }

    .personal-card:hover {
        transform: translateX(5px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }

    .personal-card.presente {
        border-left-color: #10b981;

        align-items: center;
        gap: 5px;
        font-size: 0.9rem;
        position: relative;
    }

        .btn-status:hover {
            transform: scale(1.08);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .btn-status:active {
            transform: scale(0.98);
        }

        .btn-status i {
            font-size: 1.5rem;
        }

        .btn-status.active {
            border-width: 3px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        }

    .btn-presente {
        color: #10b981;
    }

        .btn-presente.active {
            background: #10b981;
            color: white;
        }

    .btn-permiso {
        color: #f59e0b;
    }

        .btn-permiso.active {
            background: #f59e0b;
            color: white;
        }

    .btn-ausente {

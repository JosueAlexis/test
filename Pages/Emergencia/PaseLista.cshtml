<div class="container-emergency">
    <!-- HEADER -->
    <div class="header-emergency">
        <div class="title-row">
            <div class="title-content">
                <span class="emergency-icon">🚨</span>
                <div>
                    <h1 style="margin: 0; font-size: 2rem;">Pase de Lista</h1>
                    <small style="color: #6b7280;">Emergencia Activa</small>
                </div>
            </div>
            <div class="emergency-timer" id="timer">00:00:00</div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Mensaje))
        {
            <div class="alert alert-info">@Model.Mensaje</div>
        }

        <!-- 🔍 BÚSQUEDA Y FILTROS -->
        <div class="search-container">
            <div class="search-box">
                <i class="fas fa-search search-icon"></i>
                <input type="text"
                       class="search-input"
                       id="searchInput"
                       placeholder="Buscar por nombre, reloj o puesto..."
                       autocomplete="off">
                <button class="clear-search" id="clearSearch" onclick="clearSearch()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="filter-chips">
                <button class="chip" onclick="filterByDepartment('all')">
                    <i class="fas fa-list"></i> Todos
                </button>
                <button class="chip" onclick="filterByDepartment('Operaciones')">
                    🚚 Operaciones
                </button>
                <button class="chip" onclick="filterByDepartment('Administrativo')">
                    📋 Administrativo
                </button>
                <button class="chip" onclick="filterByDepartment('Finanzas')">
                    💰 Finanzas
                </button>
            </div>
        </div>

        <!-- ESTADÍSTICAS -->
        <div class="stats-grid">
            <div class="stat-box" onclick="filterByStatus('all')">
                <div class="stat-number">@Model.Total</div>
                <div class="stat-label">TOTAL</div>
            </div>
            <div class="stat-box green" onclick="filterByStatus(1)">
                <div class="stat-number" id="countPresentes">@Model.Presentes</div>
                <div class="stat-label">PRESENTES</div>
            </div>
            <div class="stat-box yellow" onclick="filterByStatus(2)">
                <div class="stat-number" id="countPermisos">@Model.Permisos</div>
                <div class="stat-label">PERMISOS</div>
            </div>
            <div class="stat-box red" onclick="filterByStatus(3)">
                <div class="stat-number" id="countAusentes">@Model.Ausentes</div>
                <div class="stat-label">AUSENTES</div>
            </div>
            <div class="stat-box gray" onclick="filterByStatus(0)">
                <div class="stat-number" id="countPendientes">@Model.Pendientes</div>
                <div class="stat-label">PENDIENTES</div>
            </div>
        </div>

        <!-- BARRA DE PROGRESO -->
        <div class="progress-container">
            <div class="progress-bar" id="progressBar"
                 style="width: @(Model.Total > 0 ? (100.0 * (Model.Total - Model.Pendientes) / Model.Total) : 0)%"></div>
            <div class="progress-text" id="progressText">
                @(Model.Total > 0 ? Math.Round(100.0 * (Model.Total - Model.Pendientes) / Model.Total) : 0)%
            </div>
        </div>

        <!-- CONTROLES -->
        <div class="controls">
            <button class="btn btn-filter" id="btnFiltro" onclick="toggleFaltantes()">
                <i class="fas fa-filter"></i> <span id="textoFiltro">Mostrar Faltantes</span>
            </button>
            <button class="btn btn-export" onclick="exportarReporte()">
                <i class="fas fa-file-excel"></i> Exportar
            </button>
            <button class="btn btn-reset" onclick="reiniciarTodo()">
                <i class="fas fa-redo"></i> Reiniciar
            </button>
        </div>
    </div>

    <!-- CONTADOR DE RESULTADOS -->
    <div class="results-counter" id="resultsCounter" style="display: none;"></div>

    <!-- LISTA -->
    <div class="personal-list" id="personalList">
        @foreach (var p in Model.Personal)
        {
            var statusClass = p.Status switch
            {
                1 => "presente",
                2 => "permiso",
                3 => "ausente",
                _ => ""
            };

            <div class="personal-card @statusClass"
                 data-id="@p.Id"
                 data-status="@p.Status"
                 data-nombre="@p.Nombre @p.Apellido"
                 data-reloj="@p.Reloj"
                 data-puesto="@p.Puesto"
                 data-departamento="@p.Departamento">

                <div class="personal-info">
                    <div>
                        <h3>@p.Nombre @p.Apellido</h3>
                        <div class="personal-details">
                            <span class="detail-item">
                                <i class="fas fa-id-badge"></i> @p.Reloj
                            </span>
                            <span class="detail-item">
                                <i class="fas fa-briefcase"></i> @p.Puesto
                            </span>
                            <span class="detail-item">
                                <i class="fas fa-building"></i> @p.Departamento
                            </span>
                        </div>
                        <small style="color: #9ca3af; margin-top: 5px; display: block;">
                            <i class="fas fa-user-tie"></i> Reporta a: @p.ReportaA
                        </small>
                    </div>
                </div>

                <div class="status-buttons">
                    <button class="btn-status btn-presente @(p.Status == 1 ? "active" : "")"
                            onclick="cambiarStatus(@p.Id, 1, this)">
                        <i class="fas fa-check-circle"></i>
                        <span>Presente</span>
                    </button>
                    <button class="btn-status btn-permiso @(p.Status == 2 ? "active" : "")"
                            onclick="cambiarStatus(@p.Id, 2, this)">
                        <i class="fas fa-clock"></i>
                        <span>Permiso</span>
                    </button>
                    <button class="btn-status btn-ausente @(p.Status == 3 ? "active" : "")"
                            onclick="cambiarStatus(@p.Id, 3, this)">
                        <i class="fas fa-times-circle"></i>
                        <span>Ausente</span>
                    </button>
                </div>
            </div>
        }
    </div>

    <!-- SIN RESULTADOS -->
    <div class="no-results" id="noResults" style="display: none;">
        <i class="fas fa-search"></i>
        <h3>No se encontraron resultados</h3>
        <p>Intenta con otro término de búsqueda</p>
    </div>
</div>

<!-- 🔔 TOAST NOTIFICATION -->
<div class="toast" id="toast"></div>

@section Scripts {
    <script>
        let filtroActivo = false;
        let filtroStatusActivo = null;
        let filtroDepartamentoActivo = 'all';
        let timerInicio = Date.now();

        // ⏱️ TIMER DE EMERGENCIA
        function actualizarTimer() {
            const ahora = Date.now();
            const diferencia = Math.floor((ahora - timerInicio) / 1000);

            const horas = Math.floor(diferencia / 3600);
            const minutos = Math.floor((diferencia % 3600) / 60);
            const segundos = diferencia % 60;

            const tiempo = [horas, minutos, segundos]
                .map(v => v.toString().padStart(2, '0'))
                .join(':');

            document.getElementById('timer').textContent = tiempo;
        }

        setInterval(actualizarTimer, 1000);

        // 🔔 MOSTRAR TOAST
        function mostrarToast(mensaje, tipo = 'success') {
            const toast = document.getElementById('toast');
            toast.textContent = mensaje;
            toast.className = `toast ${tipo} show`;

            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }

        // 🎵 SONIDO (opcional)
        function playSound() {
            if (window.AudioContext || window.webkitAudioContext) {
                const audioCtx = new (window.AudioContext || window.webkitAudioContext)();
                const oscillator = audioCtx.createOscillator();
                const gainNode = audioCtx.createGain();

                oscillator.connect(gainNode);
                gainNode.connect(audioCtx.destination);

                oscillator.frequency.value = 800;
                oscillator.type = 'sine';

                gainNode.gain.setValueAtTime(0.3, audioCtx.currentTime);
                gainNode.gain.exponentialRampToValueAtTime(0.01, audioCtx.currentTime + 0.1);

                oscillator.start(audioCtx.currentTime);
                oscillator.stop(audioCtx.currentTime + 0.1);
            }
        }

        // 📳 VIBRACIÓN EN MÓVILES
        function vibrar() {
            if ('vibrate' in navigator) {
                navigator.vibrate(50);
            }
        }

        // ✅ CAMBIAR STATUS
        async function cambiarStatus(id, status, button) {
            try {
                const token = $('input[name="__RequestVerificationToken"]').val();

                const response = await fetch('?handler=ActualizarStatus', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify({ id: id, status: status })
                });

                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                }

                const result = await response.json();

                if (result.success) {
                    const card = $(`[data-id="${id}"]`);

                    // ✨ ANIMACIÓN
                    card.addClass('status-changed');
                    setTimeout(() => card.removeClass('status-changed'), 500);

                    // 🎵 FEEDBACK
                    playSound();
                    vibrar();

                    // 🎨 ACTUALIZAR UI
                    card.removeClass('presente permiso ausente');
                    card.attr('data-status', status);

                    if (status === 1) card.addClass('presente');
                    else if (status === 2) card.addClass('permiso');
                    else if (status === 3) card.addClass('ausente');

                    card.find('.btn-status').removeClass('active');
                    $(button).addClass('active');

                    actualizarStats();

                    // 🔔 NOTIFICACIÓN
                    const nombre = card.data('nombre');
                    const statusText = status === 1 ? 'Presente' : status === 2 ? 'Permiso' : 'Ausente';
                    mostrarToast(`✅ ${nombre} marcado como ${statusText}`);

                    // 🎉 CONFETTI SI TODOS ESTÁN PRESENTES
                    verificarCompletado();
                } else {
                    mostrarToast('⚠️ ' + (result.mensaje || 'Error desconocido'), 'error');
                }
            } catch (error) {
                console.error('Error completo:', error);
                mostrarToast('❌ Error al actualizar: ' + error.message, 'error');
            }
        }

        // 📊 ACTUALIZAR ESTADÍSTICAS
        function actualizarStats() {
            const cards = $('.personal-card:visible');
            let presentes = 0, permisos = 0, ausentes = 0, pendientes = 0;

            $('.personal-card').each(function() {
                const status = parseInt($(this).attr('data-status'));
                if (status === 1) presentes++;
                else if (status === 2) permisos++;
                else if (status === 3) ausentes++;
                else pendientes++;
            });

            $('#countPresentes').text(presentes);
            $('#countPermisos').text(permisos);
            $('#countAusentes').text(ausentes);
            $('#countPendientes').text(pendientes);

            const total = @Model.Total;
            const progreso = total > 0 ? ((total - pendientes) / total) * 100 : 0;
            $('#progressBar').css('width', progreso + '%');
            $('#progressText').text(Math.round(progreso) + '%');
        }

        // 🎉 VERIFICAR SI TODOS COMPLETADOS
        function verificarCompletado() {
            const pendientes = parseInt($('#countPendientes').text());
            if (pendientes === 0) {
                lanzarConfetti();
                mostrarToast('🎉 ¡Pase de lista completado!', 'success');
            }
        }

        // 🎊 LANZAR CONFETTI
        function lanzarConfetti() {
            const colors = ['#667eea', '#764ba2', '#10b981', '#f59e0b', '#ef4444'];
            const container = document.body;

            for (let i = 0; i < 50; i++) {
                setTimeout(() => {
                    const confetti = document.createElement('div');
                    confetti.className = 'confetti';
                    confetti.style.left = Math.random() * 100 + '%';
                    confetti.style.background = colors[Math.floor(Math.random() * colors.length)];
                    confetti.style.animationDelay = Math.random() * 2 + 's';
                    container.appendChild(confetti);

                    setTimeout(() => confetti.remove(), 3000);
                }, i * 30);
            }
        }

        // 🔍 BÚSQUEDA EN TIEMPO REAL
        $('#searchInput').on('input', function() {
            const query = $(this).val().toLowerCase().trim();
            const clearBtn = $('#clearSearch');

            clearBtn.toggleClass('visible', query.length > 0);

            if (query === '') {
                aplicarFiltros();
                return;
            }

            let visibles = 0;
            $('.personal-card').each(function() {
                const nombre = $(this).data('nombre').toLowerCase();
                const reloj = $(this).data('reloj').toString();
                const puesto = $(this).data('puesto').toLowerCase();

                const coincide = nombre.includes(query) ||
                               reloj.includes(query) ||
                               puesto.includes(query);

                if (coincide) {
                    $(this).show();
                    visibles++;
                } else {
                    $(this).hide();
                }
            });

            mostrarContadorResultados(visibles);
        });

        function clearSearch() {
            $('#searchInput').val('');
            $('#clearSearch').removeClass('visible');
            aplicarFiltros();
        }

        // 🏷️ FILTRO POR DEPARTAMENTO
        function filterByDepartment(depto) {
            filtroDepartamentoActivo = depto;

            $('.filter-chips .chip').removeClass('active');
            event.target.closest('.chip').classList.add('active');

            aplicarFiltros();
        }

        // 📊 FILTRO POR STATUS
        function filterByStatus(status) {
            if (filtroStatusActivo === status) {
                filtroStatusActivo = null;
            } else {
                filtroStatusActivo = status;
            }
            aplicarFiltros();
        }

        // 🔄 APLICAR TODOS LOS FILTROS
        function aplicarFiltros() {
            const query = $('#searchInput').val().toLowerCase().trim();
            let visibles = 0;

            $('.personal-card').each(function() {
                let mostrar = true;

                // Filtro de búsqueda
                if (query) {
                    const nombre = $(this).data('nombre').toLowerCase();
                    const reloj = $(this).data('reloj').toString();
                    const puesto = $(this).data('puesto').toLowerCase();
                    mostrar = nombre.includes(query) || reloj.includes(query) || puesto.includes(query);
                }

                // Filtro de departamento
                if (mostrar && filtroDepartamentoActivo !== 'all') {
                    mostrar = $(this).data('departamento') === filtroDepartamentoActivo;
                }

                // Filtro de status
                if (mostrar && filtroStatusActivo !== null) {
                    const status = parseInt($(this).attr('data-status'));
                    if (filtroStatusActivo === 'all') {
                        mostrar = true;
                    } else {
                        mostrar = status === filtroStatusActivo;
                    }
                }

                // Filtro de faltantes
                if (mostrar && filtroActivo) {
                    const status = parseInt($(this).attr('data-status'));
                    mostrar = status === 0 || status === 3;
                }

                $(this).toggle(mostrar);
                if (mostrar) visibles++;
            });

            mostrarContadorResultados(visibles);
        }

        function mostrarContadorResultados(cantidad) {
            const counter = $('#resultsCounter');
            const noResults = $('#noResults');
            const total = @Model.Total;

            if (cantidad === total) {
                counter.hide();
                noResults.hide();
            } else if (cantidad === 0) {
                counter.hide();
                noResults.show();
            } else {
                counter.text(`Mostrando ${cantidad} de ${total} empleados`);
                counter.show();
                noResults.hide();
            }
        }

        // 🚨 MOSTRAR FALTANTES
        function toggleFaltantes() {
            filtroActivo = !filtroActivo;
            const btn = $('#btnFiltro');
            const texto = $('#textoFiltro');

            if (filtroActivo) {
                btn.addClass('active');
                texto.text('Mostrar Todos');
            } else {
                btn.removeClass('active');
                texto.text('Mostrar Faltantes');
            }

            aplicarFiltros();
        }

        // 🔄 REINICIAR TODO
        async function reiniciarTodo() {
            if (!confirm('⚠️ ¿Reiniciar TODOS los status a Pendiente?')) return;

            try {
                const token = $('input[name="__RequestVerificationToken"]').val();

                const response = await fetch('?handler=Reiniciar', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    }
                });

                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}`);
                }

                const result = await response.json();

                if (result.success) {
                    mostrarToast('✅ ' + result.mensaje, 'success');
                    setTimeout(() => location.reload(), 1500);
                } else {
                    mostrarToast('⚠️ ' + result.mensaje, 'error');
                }
            } catch (error) {
                console.error(error);
                mostrarToast('❌ Error al reiniciar: ' + error.message, 'error');
            }
        }

        // 📊 EXPORTAR REPORTE
        function exportarReporte() {
            mostrarToast('📊 Función de exportación próximamente...', 'success');
            // TODO: Implementar exportación a Excel
        }

        // ⌨️ ATAJOS DE TECLADO
        document.addEventListener('keydown', function(e) {
            // Ctrl+F = Buscar
            if (e.ctrlKey && e.key === 'f') {
                e.preventDefault();
                document.getElementById('searchInput').focus();
            }

            // Esc = Limpiar búsqueda
            if (e.key === 'Escape') {
                clearSearch();
            }
        });

        // 🚀 INICIALIZACIÓN
        $(document).ready(function() {
            console.log('✅ Pase de Lista Mejorado cargado');
            actualizarStats();
        });
    </script>
}

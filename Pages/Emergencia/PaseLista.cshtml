    }

    }

    /* 🔔 TOAST NOTIFICATION */
    .toast {
        position: fixed;
        bottom: 20px;
        right: 20px;
        background: white;
        padding: 15px 20px;
        border-radius: 12px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
        z-index: 9999;
        display: none;
        animation: slideIn 0.3s ease;
    }

    @@keyframes slideIn {
        from

    {
        transform: translateX(400px);
        opacity: 0;
    }

    to {
        transform: translateX(0);
        opacity: 1;
    }

    }

    .toast.show {
        display: block;
    }

    .toast.success {
        border-left: 4px solid #10b981;
    }

    .toast.error {
        border-left: 4px solid #ef4444;
    }

    /* 📊 CONTADOR DE RESULTADOS */
    .results-counter {
        text-align: center;
        padding: 15px;
        background: rgba(255, 255, 255, 0.9);
        border-radius: 12px;
        margin-bottom: 15px;
        font-weight: 600;
        color: #374151;
    }

    .no-results {
        text-align: center;
        padding: 60px 20px;
        background: white;
        border-radius: 15px;
        color: #6b7280;
    }

        .no-results i {
            font-size: 4rem;
            margin-bottom: 15px;
            opacity: 0.3;
        }


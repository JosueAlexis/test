        display: grid;
        gap: 15px;
    }

    .personal-card {
        background: white;
        border-radius: 15px;
        padding: 20px;
        border-left: 5px solid #6b7280;
        transition: all 0.3s;
        position: relative;
        overflow: hidden;
    }


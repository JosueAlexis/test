@page
@model ProyectoRH2025.Pages.Catalogos.UnidadesModel
@{
    ViewData["Title"] = "Unidades";
}

<div class="container-fluid mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0"><i class="fas fa-truck"></i> Catálogo de Unidades</h4>
                <a asp-page="/Unidades/CrearUnidad" class="btn btn-light btn-sm">
                    <i class="fas fa-plus"></i> Nueva Unidad
                </a>
            </div>
        </div>
        <div class="card-body">

            <!-- Filtros -->
            <form method="get" class="row g-2 mb-3">
                <div class="col-md-2">
                    <input type="text" name="busqueda" value="@Model.Busqueda"
                           class="form-control form-control-sm" placeholder="Buscar número o placas" />
                </div>
                <div class="col-md-2">
                    <select name="filtroIdCuenta" class="form-select form-select-sm">
                        <option value="">- Cuenta -</option>
                        @foreach (var cuenta in Model.Cuentas)
                        {
                            <option value="@cuenta.Id" selected="@(Model.FiltroIdCuenta == cuenta.Id)">
                                @cuenta.CodigoCuenta
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <select name="filtroPool" class="form-select form-select-sm">
                        <option value="">- Pool -</option>
                        @foreach (var pool in Model.pools)
                        {
                            <option value="@pool.id" selected="@(Model.FiltroPool == pool.id)">
                                @pool.Pool
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <select name="filtroCliente" class="form-select form-select-sm">
                        <option value="">- Cliente -</option>
                        @foreach (var cliente in Model.Clientes)
                        {
                            <option value="@cliente.codCliente" selected="@(Model.FiltroCliente == cliente.codCliente)">
                                @cliente.Cliente
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-1">
                    <input type="number" name="filtroAno" value="@Model.FiltroAno"
                           class="form-control form-control-sm" placeholder="Año" />
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="fas fa-search"></i> Buscar
                    </button>
                    <a asp-page="/Unidades/Unidades" class="btn btn-secondary btn-sm">
                        <i class="fas fa-redo"></i> Limpiar
                    </a>
                </div>
            </form>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Tabla -->
            <div class="table-responsive">
                <table class="table table-sm table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 50px;">ID</th>
                            <th style="width: 100px;">Unidad</th>
                            <th style="width: 100px;">Placas</th>
                            <th style="width: 150px;">Cuenta</th>
                            <th style="width: 120px;">Pool</th>
                            <th style="width: 120px;">Cliente</th>
                            <th style="width: 70px;">Año</th>
                            <th style="width: 120px;">Sucursal</th>
                            <th style="width: 100px;" class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Unidades.Any())
                        {
                            @foreach (var unidad in Model.Unidades)
                            {
                                <tr>
                                    <td>@unidad.id</td>
                                    <td><strong>@unidad.NumUnidad</strong></td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(unidad.Placas))
                                        {
                                            <span class="badge bg-secondary">@unidad.Placas</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (unidad.Cuenta != null)
                                        {
                                            <span class="badge" style="background-color: @unidad.Cuenta.ColorHex;">
                                                @unidad.Cuenta.CodigoCuenta
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">Sin cuenta</span>
                                        }
                                    </td>
                                    <td>
                                        @if (unidad.PoolNavigation != null)
                                        {
                                            <text>@unidad.PoolNavigation.Pool</text>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (unidad.Cliente != null)
                                        {
                                            <text>@unidad.Cliente.Cliente</text>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>@unidad.AnoUnidad</td>
                                    <td>
                                        @if (unidad.Sucursal != null)
                                        {
                                            <text>@unidad.Sucursal.Sucursal</text>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a asp-page="/Unidades/EditarUnidad" asp-route-id="@unidad.id"
                                           class="btn btn-sm btn-warning me-1">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-danger"
                                                onclick="confirmarEliminar(@unidad.id, @unidad.NumUnidad)">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center py-4">
                                    <div class="text-muted">
                                        <i class="fas fa-inbox fa-2x mb-2"></i>
                                        <p class="mb-0">No hay unidades registradas</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="mt-2">
                <small class="text-muted">Total: @Model.Unidades.Count unidades</small>
            </div>
        </div>
    </div>
</div>

<!-- Modal Eliminar -->
<div class="modal fade" id="modalEliminar" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Eliminar Unidad</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>¿Confirma que desea eliminar la unidad <strong id="unidadNumero"></strong>?</p>
                <div class="alert alert-warning mb-0">
                    <small>Esta acción no se puede deshacer. Si la unidad tiene sellos asignados, no podrá eliminarse.</small>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form method="post" id="formEliminar" class="d-inline">
                    <input type="hidden" name="idEliminar" id="idEliminar" />
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let modalEliminar;

        document.addEventListener('DOMContentLoaded', function() {
            modalEliminar = new bootstrap.Modal(document.getElementById('modalEliminar'));
        });

        function confirmarEliminar(id, numeroUnidad) {
            document.getElementById('idEliminar').value = id;
            document.getElementById('unidadNumero').textContent = numeroUnidad;
            modalEliminar.show();
        }
    </script>
}